{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/wenamas-sdn-bhd/schema/json/universal_document/placeholder_filler.json",
  "title": "Universal Document Placeholder Fillers Specification",
  "description": "This schema specify what is expected for the field 'placeholder_filler' in 'universal_document' table in system's database. This field tells exactly what entities like 'user', 'client', and more will be used to fill the document.",
  "type": "object",
  "properties": {
        "placeholders": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "position": {
                        "type": "object",
                        "properties": {
                            "page_index": {
                                "type": "number"
                            },
                            "x": {
                                "type": "number"
                            },
                            "y": {
                                "type": "number"
                            },
                            "width": {
                                "type": "number"
                            },
                            "height": {
                                "type": "number"
                            },
                            "note": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        },
                        "required": ["page_index", "x", "y", "width", "height"]
                    },
                    "data_source": {
                        "type": "object",
                        "properties": {
                            "entity": {
                                "enum": ["USER", "CLIENT", "LOAN"]
                            },
                            "field": {
                                "type": "string"
                            },
                            "fallback": {
                                "type": "string"
                            },
                            "note": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        },
                        "required": ["entity", "field"]
                    },
                    "formatting": {
                        "type": "object",
                        "properties": {
                            "type": {
                                "type": "string"
                            },
                            "font_size": {
                                "type": "number"
                            },
                            "note": {
                                "type": "string"
                            },
                            "description": {
                                "type": "string"
                            }
                        },
                        "required": ["type", "font_size"]
                    }
                },
                "required": ["position", "data_source", "formatting"]
            },
            "minItems": 1,
            "uniqueItems": true
        }
    },
    "required": ["placeholders"]
}